<Window x:Class="LabWork46.Task2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork46"
        mc:Ignorable="d"
        Title="Отправка команды в БД" Height="450" Width="800" FontSize="18">
    <StackPanel>
        <Label>Команда MSSQL</Label>
        <TextBox Text="UPDATE Game SET Price = Price + 1" x:Name="MSSQLCommandTextBox"/>
        <Button Content="Отправить команду" Click="SendMSSQLCommandButton_Click"/>
        <Label>Команда SQLite</Label>
        <TextBox Text="UPDATE Game SET Price = Price + 1" x:Name="SQLiteCommandTextBox"/>
        <Button Content="Отправить команду" Click="SendSQLiteCommandButton_Click"/>
    </StackPanel>
</Window>
