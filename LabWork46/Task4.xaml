<Window x:Class="LabWork46.Task4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork46"
        mc:Ignorable="d"
        Title="Добавление данных в БД" Height="450" Width="800" FontSize="18">
    <StackPanel>
        <Label Content="Title"/>
        <TextBox x:Name="TitleTextBox"/>
        <Label Content="Price"/>
        <TextBox x:Name="PriceTextBox"/>
        <Label Content="PublicationYear"/>
        <TextBox x:Name="PublicationYearTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Button Content="MSSQL" Click="MSSQLInsertGameButton_Click" Margin="5"/>
            <Button Content="SQLite" Click="SQLiteInsertGameButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
